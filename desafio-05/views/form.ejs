<%- include('./partials/head')  %> 
<h1 class="text-center m-3">Create a product</h1>
<div class="m-auto border col-11 col-md-6 col-lg-3 text-center">
  <form id="productsForm" method="post">
    <fieldset>
      <div class="m-3 d-flex flex-column justify-content-center">
        <label>Title:</label>
        <input name="title" class="m-auto">
      </div>
      <div class="m-3 d-flex flex-column justify-content-center">
        <label>Price:</label>
        <input name="price" class="m-auto">
      </div>
      <div class="m-3 d-flex flex-column justify-content-center">
        <label>Thumbnail:</label>
        <input name="thumbnail" class="m-auto">
      </div>
      <input type="submit" class="btn btn-primary mb-3">
    </fieldset>
  </form>
</div>
<div class="container">
  <div class="row col-11 col-md-6 col-lg-3 text-center m-auto mt-3">
    <a href="/products" class="text-center btn btn-secondary m-auto">Ir a Productos</a>
  </div>
</div>
<%- include('./partials/foot')  %> 